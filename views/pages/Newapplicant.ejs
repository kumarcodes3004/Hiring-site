<% layout('layout/boilerplate')%>

    <div class="row">
        <h1 class="text-center">New Applicant</h1>
        <div class="col-6 offset-3">
            <form action="/applicant" method="POST" class="validated-form">
                <div class="mb-3">
                    <label class="form-label" for="name">Name</label>
                    <input class="form-control" type="text" name="name" id="name" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <!-- <label for=""></label> -->
                </div>
                <div class="mb-3">
                    <label class="form-label" for="email">E-mail</label>
                    <input class="form-control" type="text" name="email" id="email" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <!-- <label for=""></label> -->
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <!-- <label for=""></label> -->
                </div>
                <div class="mb-3">
                    <label for="jobtype" class="form-label">Job Type</label>
                    <div class="input-group">
                        <select name="jobtype" id="jobtype">
                            <option value="">--choose your role---</option>
                            <option value="frontend">Front-End Developer</option>
                            <option value="backend">Back-End Developer</option>
                            <option value="react">React-Developer</option>
                            <option value="fullstack">Full-stack Developer</option>
                            <!-- <option value="audi">Audi</option> -->
                        </select>
                        <!-- <span class="input-group-text" id="price-label"></span> -->
                        <!-- <input type="text" class="form-control" id="price" placeholder="" name="campground[price
                    ]" required>-->
                    </div>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Brief About Yourself</label>
                    <textarea class="form-control" type="text" name="description" id="description" required></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <!-- <label for=""></label> -->
                </div>

                <div class="mb-3"><button class="btn btn-success">Submit</button></div>

            </form>
            <a href="/Home">BACK TO Home</a>
        </div>
    </div>